 <div class="pagey">
    <div class="footsteps-up">
      <%= image_tag "feetdown.png", class: "footsteps-up" %>
        <div class="page">

          <h2 class="signup"><strong>Sign up</strong></h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" }%>
          <div class="row">
            <div class="col-6">
              <%= f.input :first_name,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "First Name" } %>
            </div>
            <div class="col-6">
              <%= f.input :last_name,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "Last Name" } %>
            </div>
          </div>
              <%= f.input :location,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "location" } %>
              <% if params[:status] %>
                <%= f.input :status, as: :hidden, input_html: { value: params[:status][:status]} %>
              <% end %>
                <% if params[:status] && params[:status][:status] == "guide" %>
                  <%= f.input :is_guide, disabled: false,
                              required: true,
                              autofocus: true,
                              input_html: { checked: true , style: "display: none;" }%>
                <% elsif  params[:user] && params[:user][:status]  == "guide" %>
                <%= f.input :is_guide, disabled: false,
                              required: true,
                              autofocus: true,
                              input_html: { checked: true , style: "display: none;" }%>
                <% end %>
          <div class="row">
            <div class="col-6">
              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>
            </div>
            <div class="col-6">
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" } %>
            </div>
            </div>
            <br>
            <div class="form-actions", style="width: 380px; margin: auto;">
                <%= f.button :submit, "SIGN UP", :class => "purple-login-button text:uppercase" %>
                <br>
                  <%# <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
    </div>
    <%= image_tag 'feetup.png', class: "footsteps-down" %>
  </div>
