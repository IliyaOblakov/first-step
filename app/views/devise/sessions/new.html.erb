<div class="pagey">
  <div class="footsteps-up">
    <%= image_tag "feetdown.png", class: "footsteps-up" %>
    <div class="page2">
      <h2 class="signup2"><strong>Log in</strong></h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
        <div class="form-actions", style="width: 500px; margin: auto;">
          <%= f.button :submit, "LOGIN", class: "purple-login-button text: uppercase" %>
          <br>
        </div>
            <% end %>
          </div>
            <%= image_tag 'feetup.png', class: "footsteps-down" %>
        </div>
</div>
