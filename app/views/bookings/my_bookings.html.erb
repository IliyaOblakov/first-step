  <h1 class="h1-my-bookings">All your bookings:</h1>
   <% if current_user.is_guide == false %>
     <%=link_to "Create a new booking",  new_booking_path, :class => "btn btn-pink text-light text-uppercase rounded-pill fw-bold"%>
  <% end %>
<div class="container-my-bookings">
  <div class="normal">
    <% @my_bookings.each do |booking|%>
      <div class="my-bookings">
        <%if current_user.is_guide == true %>
          <h3><%="Client: #{booking.user_seeker.first_name}  #{booking.user_seeker.last_name}" %> </h3>
          <h3><%= "Topic: #{booking.topic}"  %></h3>
          <h5><%= "Created on: #{booking.created_at.day}/#{booking.created_at.month}/#{booking.created_at.year}"  %></h3>

          <%=link_to "Booking page", booking_path(booking), :class => "btn btn-pink text-light text-uppercase rounded-pill fw-bold"  %>
        <% else %>
          <h3>Hello <%= booking.user_seeker.first_name %></h3>
          <h3>Your guide's name is: <%="#{booking.user_guide.first_name}  #{booking.user_guide.last_name}"%></h3>
          <h5><%= "Created on: #{booking.created_at.day}/#{booking.created_at.month}/#{booking.created_at.year}"  %></h3>
          <%=link_to "Booking page", booking_path(booking), :class => "btn btn-pink text-light text-uppercase rounded-pill fw-bold" %>
        <% end %>
      </div>
    <% end %>
  </div>
 <% if current_user.is_guide == true %>
   <div class="nhs-widgets">
   <h2 class="resources-h2"><strong>Resources</strong></h2>
      <iframe title="NHS.UK Find services widget" src="https://developer.api.nhs.uk/widgets/services/all/?uid=6c762b70-e701-11ec-b2b7-8d94d9cdcb16"
      width="100%" height="400px" style="border: solid 1px #ccc; max-width: 600px;"></iframe>
      <iframe title="NHS.UK Health A to Z widget" src="https://developer.api.nhs.uk/widgets/conditions?uid=6c762b70-e701-11ec-b2b7-8d94d9cdcb16"
      width="100%" height="400px" style="border: solid 1px #ccc; max-width: 600px;"></iframe>
      <iframe title="NHS.UK Live Well widget" src="https://developer.api.nhs.uk/widgets/live-well?uid=6c762b70-e701-11ec-b2b7-8d94d9cdcb16"
      width="100%" height="400px" style="border: solid 1px #ccc; max-width: 600px;"></iframe>
   </div>
  <% end %>
</div>
