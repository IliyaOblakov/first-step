<div id="message-<%= message.id %>" class="message-box">
  <% move_right = message.user.first_name == @user.first_name ? "move_right" : "" %>
    <div class = "message_content <%= move_right %>" >
    <small>
      <span class="author"> <strong><%= message.user.first_name %></strong> </span>
      <i class="created_at"><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    </small>
    <p class="content"><%= message.content %></p>
  </div>
</div>
